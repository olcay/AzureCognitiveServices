@{
    ViewData["Title"] = "Face Detection";
}

<div class="text-center">
    <h1 class="display-4">Train Face</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-4">
            <form method="post" enctype="multipart/form-data" asp-action="Index">
                <div class="form-group">
                    <div class="col-md-10">
                        <p>Name:</p>
                        <input type="text" name="name">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <p>Upload one or more files using this form:</p>
                        <input type="file" name="files" multiple>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Upload">
                    </div>
                </div>
            </form>

            @if (Model != null)
            {
                foreach (var filePath in Model.FilePathList)
                {
                    <img src="@filePath" />
                }
            }
        </div>
        <div class="col-8">
            @if (Model != null)
            {
                <textarea rows="30" cols="120">@Model.AnalysisResult</textarea>
            }
        </div>
    </div>
</div>